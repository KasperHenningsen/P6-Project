<div class="pt-2 row d-flex justify-content-center">
  <div class="col-4">
    <%= form.label :start_date %>
    <%= form.datetime_local_field :start_date, class: "form-control", id: 'start-date-input', step: 3600 %>
  </div>

  <div class="col-4">
    <%= form.label :end_date %>
    <%= form.datetime_local_field :end_date, class: "form-control", id: 'end-date-input', step: 3600 %>
  </div>
</div>