<div class="mt-4 container">
  <%= form_with url: featurematrix_show_path, method: :get do |form| %>
    <%= form.label 'Select dataset:', {}, class: 'form-text' %>
    <%= form.select :dataset, @data_options, {}, class: 'form-select', style: 'max-width: 500px;' %>
    <hr>
    <div class="mt-2 d-flex justify-content-end">
      <%= form.submit 'Submit', class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
