<%= javascript_include_tag 'pages/home' %>

<div class="container d-flex justify-content-center">
  <div class="m-4 p-2 text-center" style="background: #dedede; border-radius: 5px;">
    <%= form_with url: '/options', method: :get do |form| %>

      <div>
        <div class="pt-2 row d-flex justify-content-center">
          <div class="col-4">
            <%= form.label :start_date %>
            <%= form.datetime_local_field :start_date, class: "form-control", id: 'start-date-input', step: 3600 %>
          </div>

          <div class="col-4">
            <%= form.label :end_date %>
            <%= form.datetime_local_field :end_date, class: "form-control", id: 'end-date-input', step: 3600 %>
          </div>
        </div>
      </div>

      <hr>

      <div class="d-flex justify-content-center">
        <%= submit_tag 'Confirm', options = { class: "btn btn-success", id: "submit-button" } %>
      </div>

    <% end %>
  </div>
</div>

<script type="text/javascript" charset="utf-8">
    // TODO: ONLY FOR TEST REMOVE
    const start_date = document.getElementById("start-date-input");
    const end_date = document.getElementById("end-date-input");

    start_date.value = new Date("2020-01-01T01:00").toISOString().slice(0, 16);
    end_date.value = new Date("2020-01-01T03:00").toISOString().slice(0, 16);
</script>

